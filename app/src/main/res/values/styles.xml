<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardView.Title" parent="@style/Theme.AppCompat">
        <item name="android:layout_marginStart">@dimen/grid_small</item>
        <item name="android:layout_marginTop">@dimen/grid_small</item>
    </style>

    <style name="CardView.Value" parent="@style/Theme.AppCompat">
        <item name="android:layout_marginEnd">@dimen/grid_small</item>
        <item name="android:layout_marginBottom">@dimen/grid_small</item>
        <item name="android:textSize">@dimen/letter_semi_large</item>
    </style>

    <style name="TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/letter_semi_large</item>
    </style>
</resources>
